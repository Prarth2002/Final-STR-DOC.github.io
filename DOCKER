# Use an official lightweight Python image as the base image
FROM python:3.9-slim

# Install Tesseract, Poppler utilities, and related dependencies
RUN apt-get update && apt-get install -y \
    libleptonica-dev \
    tesseract-ocr \
    tesseract-ocr-dev \
    libtesseract-dev \
    python3-pil \
    tesseract-ocr-eng \
    tesseract-ocr-script-latn \
    poppler-utils \  # Poppler utilities for PDF handling
    && rm -rf /var/lib/apt/lists/*

# Set the working directory in the container
WORKDIR /app

# Copy the requirements file to the container
COPY requirements.txt .

# Install the Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application code to the container
COPY . .

# Set the Tesseract path in case the app uses it
ENV TESSERACT_PATH=/usr/bin/tesseract

# Run the app
CMD ["streamlit", "run", "main.py", "--server.port", "8501", "--server.address", "0.0.0.0"]



